{
  "name": "kbridh-apps-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:sass": "mkdir -p ./dist/public && sass --quiet-deps --load-path=./node_modules/govuk-frontend --load-path=./ --load-path=./node_modules/@ministryofjustice/frontend ./src/assets/scss/app.scss ./dist/public/app.css --style compressed",
    "build:ts": "swc src -d dist",
    "build:js": "esbuild src/assets/js/index.js --bundle --outfile=./dist/public/app.js --resolve-extensions=.mjs,.js",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:ts": "npm run build:ts -- --watch",
    "watch:js": "npm run build:js -- --watch",
    "watch:templates": "nodemon --watch ./src -e .njk --exec \"npm run copy:templates\"",
    "copy:fonts": "mkdir -p ./dist/public && cp -r ./src/assets/fonts/ ./dist/public/fonts/",
    "copy:images": "mkdir -p ./dist/public && cp -r ./src/assets/images/ ./dist/public/images/",
    "copy:templates": "mkdir -p ./dist/public && copyfiles -u 1 'src/**/*.njk' dist/",
    "copy": "npm run copy:fonts && npm run copy:images && npm run copy:templates",
    "build:assets": "npm run build:sass && npm run copy",
    "dev": "npm run copy && concurrently \"npm run watch:ts\" \"npm run watch:js\" \"npm run watch:sass\" \"npm run watch:templates\" \"nodemon --watch ./dist -e .js ./dist/index.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ministryofjustice/frontend": "^1.4.2",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.198",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.43",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.1",
    "govuk-frontend": "^4.1.0",
    "helmet": "^5.1.0",
    "jquery": "^3.6.0",
    "nunjucks": "^3.2.3",
    "sass": "^1.52.3",
    "typescript": "^4.7.3",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^17.0.42",
    "@types/nunjucks": "^3.2.1",
    "@types/passport": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2"
  }
}
